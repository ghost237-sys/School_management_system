# Django
DEBUG=False
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=.yourdomain.com,localhost,127.0.0.1

# Database
DATABASE_URL=postgres://user:password@localhost:5432/dbname

# Email
# Option A (Recommended): Resend HTTP API (no SMTP ports required)
RESEND_API_KEY=your-resend-api-key
DEFAULT_FROM_EMAIL=onboarding@resend.dev  # Use a verified domain address in production

# Option B: Gmail SMTP (if your network allows SMTP ports)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-no-spaces

# AWS (Optional - for S3 storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=your-region

# Other settings
ADMIN_URL=admin/  # Custom admin URL for security
